ALTER TABLE POS.L_UNIT
 DROP PRIMARY KEY CASCADE;

DROP TABLE POS.L_UNIT CASCADE CONSTRAINTS;

CREATE TABLE POS.L_UNIT
(
  UNIT_ID      NUMBER(10)                       NOT NULL,
  UNIT_CODE    VARCHAR2(20 BYTE)                NOT NULL,
  UNIT_NAME    VARCHAR2(50 BYTE)                NOT NULL,
  CREATE_BY    VARCHAR2(8 BYTE)                 NOT NULL,
  CREATE_DATE  DATE                             NOT NULL,
  SMALL_UNIT   NUMBER
)
TABLESPACE USERS
PCTUSED    0
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;


CREATE UNIQUE INDEX POS.L_UNIT_PK ON POS.L_UNIT
(UNIT_ID)
LOGGING
TABLESPACE USERS
PCTFREE    10
INITRANS   2
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
NOPARALLEL;


ALTER TABLE POS.L_UNIT ADD (
  CONSTRAINT L_UNIT_PK
  PRIMARY KEY
  (UNIT_ID)
  USING INDEX POS.L_UNIT_PK);

  
  
  
  
  
  
  
  
  
  
  
  
  
