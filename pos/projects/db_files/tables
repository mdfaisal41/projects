  DROP TABLE POS.ITEM_CONFIG CASCADE CONSTRAINTS;

CREATE TABLE POS.ITEM_CONFIG
(
  ITEM_ID             NUMBER                    NOT NULL,
  PRODUCT_ID          NUMBER                    NOT NULL,
  QUANTITY            NUMBER                    NOT NULL,
  UNIT_ID             NUMBER                    NOT NULL,
  UPDATE_BY           VARCHAR2(50 BYTE)         NOT NULL,
  UPDATE_DATE         DATE                      NOT NULL,
  QNT_FRACTION_VALUE  NUMBER(22,3)
)
TABLESPACE USERS
PCTUSED    0
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;


ALTER TABLE POS.ITEM_CONFIG ADD (
  CONSTRAINT ITEM_CONFIG_R01 
  FOREIGN KEY (ITEM_ID) 
  REFERENCES POS.L_ITEM (ITEM_ID),
  CONSTRAINT ITEM_CONFIG_R02 
  FOREIGN KEY (PRODUCT_ID) 
  REFERENCES POS.L_PRODUCT (PRODUCT_ID),
  CONSTRAINT ITEM_CONFIG_R03 
  FOREIGN KEY (UNIT_ID) 
  REFERENCES POS.L_UNIT (UNIT_ID));
  